{{>navbar}}
<div class="container pt-5 mt-5">
    <div class="row">
  <div class="col-md-8">{{#if books}}
<section>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Tittle</th>
        <th>Date</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each books}}
        <tr>
          <td><img
              src="../uploads/{{img}}"
              alt={{title}}
              class="darshboard__img"
            /></td>
          <td valign="middle" ><a href="/singlebook/{{_id}}" class="cell-title">{{title}}</a></td>
          <td valign="middle">{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
       
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>
{{else}}
<p>No books to show</p>
{{/if}}
</div>
<!--Displaying user-->
  <div class="col-md-4 ">
<div class="card border-0" style="width: 18rem;">
  <img class="card-img-top img-fluid img-thumbnail rounded-circle user-img" src={{singleUser.image}}>
  <div class="card-body text-center">
    <h5 class="card-title ">{{singleUser.displayName}}</h5>
    <p class="card-text ">Maybe this is why we read, and why in moments of darkness we return to books: to find words for what we already know.</p>

  </div>
</div>
</div>
</div>
</div>



