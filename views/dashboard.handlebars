{{>navbar}}
{{#if books}}

<section class="p-5">
    <table class="table table-striped mt-5">
        <thead>
            <tr>
                <th>Image</th>
                <th>Tittle</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each books}}
            <tr>
                <td><img src="../uploads/{{img}}" alt={{title}} class="darshboard__img"></td>
                <td><a href="/singlebook/{{_id}}">{{title}}</a></td>
                <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                <td></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>

{{else}}
<p>You have no posts yet,add some</p>
{{/if}}