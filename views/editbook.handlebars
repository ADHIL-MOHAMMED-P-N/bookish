{{>navbar}}

<section class="container">
<form action="/books" method="POST" enctype="multipart/form-data" class="mt-5 p-3">
<h3 class="text-center">Edit Book</h3>
  <div class="form-group">
    <label for="IBN Number" name="ibnNumber">IBN Number</label>
    <input
      type="text"
      class="form-control"
      id="ibnNumber"
      placeholder="12553627223"
      value={{book.ibnNumber}}
    />
  </div>
  <div class="form-group">
    <label for="Title">Title</label>
    <input type="text" class="form-control" id="title" name="title" value={{book.title}}/>
  </div>
  <div class="form-group">
    <label for="Author">Author</label>
    <input type="text" class="form-control" id="author" name="author" value={{book.author}}/>
  </div>
  <div class="form-group">
    <label for="language">language</label>
    <input type="text" class="form-control" id="language" name="language" value={{book.language}}/>
  </div>
  <div class="form-group">
    <label for="Image">Image</label>
    <input type="file" class="form-control-file" id="image" name="img" value={{book.img}}/>
  </div>
  <div class="form-group">
    <label for="buy">Buy</label>
    <input type="text" class="form-control" id="buy" name="linkToPurchase" value={{book.linkToPurchase}}/>
  </div>

  <div class="form-group">
    <label for="genre">Genre</label>
         <select
          class="form-select form-select-sm"
          aria-label=".form-select-sm example"
          name="genre"
        >
        {{#select book.genre}}
          <option selected value="Fiction">Fiction</option>
          <option value="Non-Fiction">Non-Fiction</option>
          <option value="Sci-Fi">Sci-Fi</option>
          <option value="Biography">Biography</option>
          <option value="Science">Science</option>
          <option value="Politics">Politics</option>
          <option value="Travelog">Travelog</option>
          <option value="Poem">Poem</option>
          <option value="Romantic">Romantic</option>
          {{/select }}
        </select>
  </div>
 

  <div class="form-group">
    <label for="description">Description</label>
    <textarea
      class="form-control"
      id="exampleFormControlTextarea1"
      rows="3"
      name="desc"
      value={{book.desc}}
    ></textarea>
  </div>
  <input type="submit" class="btn" value="save" />
  <a href="/home" class="btn btn-danger">Cancel</a>
</form>
</section>
