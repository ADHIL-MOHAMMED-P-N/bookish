
{{>navbar}}
<section class="container mt-5 pt-3 d-flex justify-content-center">
    <div class="card mb-3" style="max-width: 700px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <!--Dont put src="../static/uploads/imgname" ;Reason:staic is already public so dont mention it in path,eg:look css linking in layouts-->
          <img src="../uploads/{{book.img}}" class="card-img" alt="check" />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h4 class="card-title">{{book.title}}</h4>
            <h6 class="card-title">{{book.author}}</h6>
            <h5>Book Rating : {{avgRating}}</h5>
            <p class="card-text">{{book.language}},{{book.genre}}<p/>
            <p class="card-text">{{book.desc}}</p>
            <a href={{book.linkToPurchase}} class="card-link">Purchase</a>
            <h6>Your current rating : {{rating.ratingValue}}</h6>
            <form action="/singlebook/rating/{{book._id}}" method="POST">
              <label for="vol">Rate</label>
                  <input type="range" id="rating" value = "2.5" name="rating" min="0" max="5" step="0.1" class="rating-input">
                     <div class="rating-value">2.5</div>
                  <input type="submit">
            </form>
            <a href="/user/{{book.user._id}}">
  {{book.user.displayName}}
</a>
<img src="{{book.user.image}}" alt="" />
          </div>
        </div>
      </div>
    </div>

</section>
<!--review section-->
<section class="container" style="max-width:600px;">
<form action="/singlebook/{{book._id}}" method="POST" >
    <label for="review">Review</label>
    <input class="form-control" id="review" name="review" type="text"/>
  <button class="btn btn-primary" type="submit" value="submit">Post</button> 
</form>
{{#each review}}
<div class="d-flex justify-content-between">
  <div>
    <img src="{{this.user.image}}" alt="">
    <a href="/user/{{this.user._id}}">
  {{user.displayName}}
</a>
<p>
  {{this.comment}}
</p>
    <hr>
    
  </div>
</div>

{{/each}}
</section>